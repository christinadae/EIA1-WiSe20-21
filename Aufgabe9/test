// Create a new list item when clicking on the "Add" button
function newElement(): void {
  var li: HTMLLIElement = document.createElement("li");
  var inputValue: string = document.getElementById("inputtask").value;
  var t: Text = document.createTextNode(inputValue);
  li.appendChild(t);
  if (inputValue === "") {
    alert("You must write something!");
  } else {
    document.getElementById("to-dos").appendChild(li);
  }
  document.getElementById("inputtask").value = "";

  var span: HTMLElement = document.createElement("SPAN");
  var txt: Text = document.createTextNode("\u00D7");
  span.className = "";
  span.appendChild(txt);
  li.appendChild(span);

  for (i = 0; i < löschen.length; i++) {
    löschen[i].onclick = function(): void {
      // tslint:disable-next-line: typedef
      var div = this.parentElement;
      div.style.display = "none";
    };
  }
}

}


